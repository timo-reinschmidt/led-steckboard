private static void showSquare(LedService service) {
		Scanner sc = new Scanner(System.in);
		
		int topLeft = 0;
		int laenge = 0;
		//Bewertet ob das Quadrat angezeigt werden kann
		boolean value = true;
		//Da Quadrat (gleiche Seiten Länge sind zwei Punkte notwendig
		int x1;
		int y1;
		int x2;
		int y2;
				
		service.addLeds(LedService.MAX_NUMBER_OF_LEDS);
// Eingabe von Startpunkt TopLeft und anschliessende Berechnung mit Modulo
		do {
		System.out.print("Geben Sie den TopLeft-Punkt ein:");
		topLeft = sc.nextInt();
		//Berechnung des genauen Standort des gewählten Punktes
		x1 = topLeft % LedService.MAX_COLUMNS;
		y1 = topLeft / LedService.MAX_COLUMNS;
		
		System.out.print("Geben Sie die Länge Ihres Quadrats ein:");
		laenge = sc.nextInt();
		// Schleife um falsche Werte auszuschliessen
		if ((x1 >= LedService.MAX_COLUMNS) || (y1 >= LedService.MAX_ROWS)) {
		value = false;
		System.out.println("Zu grosser Wert!");
		} 
		else if ((x1 <= 0) || (y1 <= 0)) {
			value = false;
		System.out.println("Zu kleiner Wert!");
		}
		else {
		value = true;
		}
		} while (!value);

		x2 = x1 - laenge;
		y2 = y1 - laenge;
		
		//Berechnung des Quadrates was leuchten soll
		for (int col = x2; col <= x1; col++) {
		for (int row = y2; row <= y1; row++) {
		
		if (col > x2 && row > y2) {
		service.turnLedOn(col + row * LedService .MAX_COLUMNS);
		} 
		
		else {
		service.turnLedOff(col + row * LedService.MAX_COLUMNS);
		}
		}
		}

		service.stopExecutionFor(5000);
		}
		}


		service.stopExecutionFor(5000);
		}
		}
